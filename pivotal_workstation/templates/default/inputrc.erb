# some defaults / modifications for the emacs mode
$if mode=emacs

# mappings for Meta-f and Meta-b for word moving
"\e[1;9D": backward-word
"\e[1;9C": forward-word

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word

$if term=rxvt
"\e[8~": end-of-line
"\eOc": forward-word
"\eOd": backward-word
$endif

$endif

"\e[A": history-search-backward
"\e[B": history-search-forward
$if Bash
  Space: magic-space
$endif
"\M-o": "\C-p\C-a\M-f "
set completion-ignore-case on
set visible-stats on
set show-all-if-ambiguous on
"\M-s": menu-complete
